extends layout
block content
  .container.py-4
    .row
      .col.text-center.justify-content-center
        h2 Create
    .row.justify-content-center
      .col-md-8.col-lg-6
        form(action="/create", method="POST")
          .form-group
            label(for="nombre") Nombre
            input.form-control#nombre(type="text", name="nombre", placeholder="Nombre", required)
          .form-group
            label(for="apellido") Apellido
            input.form-control#apellido(type="text", name="apellido", placeholder="Apellido", required)
          .form-group
            label(for="email") Correo Electronico
            input.form-control#email(type="email", name="correo", placeholder="Correo Electronico", required)
          .form-group
            label(for="carnet") Carnet
            input.form-control#carnet(type="text", name="carnet", placeholder="Carnet", required)
          button.btn.btn-primary(type="submit") Guardar
